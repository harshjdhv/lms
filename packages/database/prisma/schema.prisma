datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "rhel-openssl-1.0.x", "rhel-openssl-3.0.x"]
}

enum UserRole {
  STUDENT
  TEACHER
  ADMIN
}

model User {
  id                     String    @id @default(uuid())
  email                  String    @unique
  name                   String?
  role                   UserRole?
  hasCompletedOnboarding Boolean   @default(false)

  // Profile fields
  bio    String?
  avatar String?
  phone  String?

  // Teacher specific
  expertise String? // For teachers
  title     String? // For teachers (e.g., "Professor", "Instructor")

  // Student specific
  studentId String? // For students
  grade     String? // For students
  semester  String? // "SEM-7" | "SEM-8"

  // Relations
  enrollments      Enrollment[]
  teacherCourses   Course[]                 @relation("TeacherCourses")
  submissions      AssignmentSubmission[]   @relation("StudentSubmissions")
  chatsAsUser1     Chat[]                   @relation("ChatUser1")
  chatsAsUser2     Chat[]                   @relation("ChatUser2")
  sentMessages     Message[]
  presence         UserPresence?
  reflectionMemory StudentReflectionMemory?

  // Mentorship relations
  mentees              Mentorship[]          @relation("MentorRelation")
  mentors              Mentorship[]          @relation("MenteeRelation")
  documentRequirements DocumentRequirement[] @relation("MentorDocuments")
  documentSubmissions  DocumentSubmission[]  @relation("StudentDocuments")
  reflectionAnswers    ReflectionAnswer[]
  createdAt            DateTime              @default(now())
  updatedAt            DateTime              @updatedAt
}

model Course {
  id          String  @id @default(uuid())
  title       String
  description String?
  imageUrl    String?
  price       Float?
  isPublished Boolean @default(false)
  semester    String? // "SEM-7" | "SEM-8"

  teacherId String
  teacher   User   @relation("TeacherCourses", fields: [teacherId], references: [id])

  attachments   Attachment[]
  chapters      Chapter[]
  enrollments   Enrollment[]
  announcements Announcement[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  assignments Assignment[]

  @@index([teacherId])
}

model Announcement {
  id       String  @id @default(uuid())
  title    String
  content  String?
  imageUrl String?

  courseId String
  course   Course @relation(fields: [courseId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([courseId])
}

model Attachment {
  id   String @id @default(uuid())
  name String
  url  String

  courseId String
  course   Course @relation(fields: [courseId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([courseId])
}

model Chapter {
  id                String             @id @default(uuid())
  title             String
  description       String?
  videoUrl          String?
  position          Int
  isPublished       Boolean            @default(false)
  isFree            Boolean            @default(false)
  reflectionAnswers ReflectionAnswer[]

  /// Cached transcript segments: [{ start: number (seconds), text: string }]. Fetched after video upload for quiz generation.
  transcriptJson        Json?
  /// Pending STT job id (Deepgram/AssemblyAI); cleared when webhook writes transcriptJson.
  transcriptJobId       String?
  /// "deepgram" | "assemblyai" â€” used by webhook to parse callback.
  transcriptJobProvider String?

  courseId String
  course   Course @relation(fields: [courseId], references: [id], onDelete: Cascade)

  userProgress     UserProgress[]
  reflectionPoints ReflectionPoint[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([courseId])
  @@index([transcriptJobId])
}

model UserProgress {
  id     String @id @default(uuid())
  userId String

  chapterId String
  chapter   Chapter @relation(fields: [chapterId], references: [id], onDelete: Cascade)

  isCompleted Boolean @default(false)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([userId, chapterId])
  @@index([chapterId])
}

model Enrollment {
  id     String @id @default(uuid())
  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  courseId String
  course   Course @relation(fields: [courseId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([courseId])
  @@index([userId])
}

model Assignment {
  id        String   @id @default(uuid())
  title     String
  content   String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  attachmentUrl String?
  status        AssignmentStatus @default(ACTIVE)
  dueDate       DateTime?

  courseId    String
  course      Course                 @relation(fields: [courseId], references: [id], onDelete: Cascade)
  submissions AssignmentSubmission[]

  @@index([courseId])
}

model AssignmentSubmission {
  id            String           @id @default(uuid())
  assignmentId  String
  assignment    Assignment       @relation(fields: [assignmentId], references: [id], onDelete: Cascade)
  studentId     String
  student       User             @relation("StudentSubmissions", fields: [studentId], references: [id], onDelete: Cascade)
  attachmentUrl String
  status        SubmissionStatus @default(PENDING)
  feedback      String? // Teacher suggestions/comments

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([assignmentId])
  @@index([studentId])
}

enum AssignmentStatus {
  ACTIVE
  REVIEW
  STOPPED
}

enum SubmissionStatus {
  PENDING
  APPROVED
  REJECTED
}

model Chat {
  id       String    @id @default(uuid())
  user1Id  String
  user1    User      @relation("ChatUser1", fields: [user1Id], references: [id], onDelete: Cascade)
  user2Id  String
  user2    User      @relation("ChatUser2", fields: [user2Id], references: [id], onDelete: Cascade)
  messages Message[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([user1Id, user2Id])
  @@index([user1Id])
  @@index([user2Id])
}

model Message {
  id       String @id @default(uuid())
  chatId   String
  chat     Chat   @relation(fields: [chatId], references: [id], onDelete: Cascade)
  senderId String
  sender   User   @relation(fields: [senderId], references: [id], onDelete: Cascade)
  content  String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([chatId, createdAt])
  @@index([senderId])
}

model UserPresence {
  id       String   @id @default(uuid())
  userId   String   @unique
  user     User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  isOnline Boolean  @default(false)
  lastSeen DateTime @default(now())

  updatedAt DateTime @updatedAt
}

model ReflectionPoint {
  id    String @id @default(uuid())
  time  Float // seconds in video
  topic String

  chapterId String
  chapter   Chapter @relation(fields: [chapterId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([chapterId])
}

model StudentReflectionMemory {
  id     String @id @default(uuid())
  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  // Core performance tracking
  weakTopics      String[] @default([]) // topics student currently struggles with
  strengthTopics  String[] @default([]) // topics the student consistently answers well
  accuracyRate    Float    @default(0.0) // overall accuracy percentage
  totalAttempts   Int      @default(0)
  correctAttempts Int      @default(0)
  topicStats      Json? // per-topic counters, streaks, and confidence

  // Learning preferences + onboarding
  learningPace              String? // "FAST" | "STEADY" | "DEEP"
  preferredLearningStyle    String? // "EXAMPLES_FIRST" | "THEORY_FIRST" | "MIXED"
  preferredExplanationStyle String? // "SHORT" | "DETAILED" | "STEP_BY_STEP" | "ANALOGY"
  confidenceLevel           String? // "BEGINNER" | "INTERMEDIATE" | "ADVANCED"
  goals                     String[] @default([]) // "EXAM_PREP" | "DEEP_UNDERSTANDING" | ...
  onboardingAnswers         Json? // raw onboarding response snapshot

  // Behavioral and interaction signals (extendable)
  interactionPatterns Json? // skips, rewatches, hint asks, chat asks, etc.
  habitSignals        Json? // derived habits inferred from interactions
  memorySignals       Json? // future extensible metadata/events
  lastActiveAt        DateTime?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([userId])
}

// ==========================================
// MENTORSHIP SYSTEM
// ==========================================

enum MentorshipStatus {
  ACTIVE
  INACTIVE
  COMPLETED
}

enum DocumentStatus {
  PENDING
  APPROVED
  REJECTED
  REVISION_REQUESTED
}

model Mentorship {
  id       String           @id @default(uuid())
  mentorId String // Teacher
  menteeId String // Student
  status   MentorshipStatus @default(ACTIVE)
  notes    String? // Mentor's private notes about mentee

  mentor User @relation("MentorRelation", fields: [mentorId], references: [id], onDelete: Cascade)
  mentee User @relation("MenteeRelation", fields: [menteeId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([mentorId, menteeId])
  @@index([mentorId])
  @@index([menteeId])
}

model DocumentRequirement {
  id          String    @id @default(uuid())
  title       String
  description String?
  dueDate     DateTime?
  isRequired  Boolean   @default(true)
  category    String? // e.g., "Academic", "Administrative", "Project"
  mentorId    String // Created by this teacher

  mentor      User                 @relation("MentorDocuments", fields: [mentorId], references: [id], onDelete: Cascade)
  submissions DocumentSubmission[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([mentorId])
  @@index([dueDate])
}

model DocumentSubmission {
  id            String         @id @default(uuid())
  requirementId String
  studentId     String
  fileUrl       String
  fileName      String
  fileSize      Int?
  status        DocumentStatus @default(PENDING)
  feedback      String? // Teacher feedback

  requirement DocumentRequirement @relation(fields: [requirementId], references: [id], onDelete: Cascade)
  student     User                @relation("StudentDocuments", fields: [studentId], references: [id], onDelete: Cascade)

  submittedAt DateTime  @default(now())
  reviewedAt  DateTime?

  @@unique([requirementId, studentId])
  @@index([requirementId])
  @@index([studentId])
  @@index([status])
}

model ReflectionAnswer {
  id        String  @id @default(uuid())
  userId    String
  chapterId String
  question  String  @db.Text
  answer    String  @db.Text
  feedback  String? @db.Text

  user    User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  chapter Chapter @relation(fields: [chapterId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())

  @@index([userId])
  @@index([chapterId])
}
