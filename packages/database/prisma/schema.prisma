datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

generator client {
  provider = "prisma-client-js"
}

enum UserRole {
  STUDENT
  TEACHER
  ADMIN
}

model User {
  id                     String    @id @default(uuid())
  email                  String    @unique
  name                   String?
  role                   UserRole?
  hasCompletedOnboarding Boolean   @default(false)

  // Profile fields
  bio    String?
  avatar String?
  phone  String?

  // Teacher specific
  expertise String? // For teachers
  title     String? // For teachers (e.g., "Professor", "Instructor")

  // Student specific
  studentId String? // For students
  grade     String? // For students
  semester  String? // "SEM-7" | "SEM-8"

  // Relations
  enrollments    Enrollment[]
  teacherCourses Course[]               @relation("TeacherCourses")
  submissions    AssignmentSubmission[] @relation("StudentSubmissions")

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Course {
  id          String  @id @default(uuid())
  title       String
  description String?
  imageUrl    String?
  price       Float?
  isPublished Boolean @default(false)
  semester    String? // "SEM-7" | "SEM-8"

  teacherId String
  teacher   User   @relation("TeacherCourses", fields: [teacherId], references: [id])

  attachments   Attachment[]
  chapters      Chapter[]
  enrollments   Enrollment[]
  announcements Announcement[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  assignments Assignment[]

  @@index([teacherId])
}

model Announcement {
  id       String  @id @default(uuid())
  title    String
  content  String?
  imageUrl String?

  courseId String
  course   Course @relation(fields: [courseId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([courseId])
}

model Attachment {
  id   String @id @default(uuid())
  name String
  url  String

  courseId String
  course   Course @relation(fields: [courseId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([courseId])
}

model Chapter {
  id          String  @id @default(uuid())
  title       String
  description String?
  videoUrl    String?
  position    Int
  isPublished Boolean @default(false)
  isFree      Boolean @default(false)

  courseId String
  course   Course @relation(fields: [courseId], references: [id], onDelete: Cascade)

  userProgress UserProgress[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([courseId])
}

model UserProgress {
  id     String @id @default(uuid())
  userId String

  chapterId String
  chapter   Chapter @relation(fields: [chapterId], references: [id], onDelete: Cascade)

  isCompleted Boolean @default(false)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([userId, chapterId])
  @@index([chapterId])
}

model Enrollment {
  id     String @id @default(uuid())
  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  courseId String
  course   Course @relation(fields: [courseId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([courseId])
  @@index([userId])
}

model Assignment {
  id        String   @id @default(uuid())
  title     String
  content   String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  attachmentUrl String?
  status        AssignmentStatus @default(ACTIVE)
  dueDate       DateTime?

  courseId    String
  course      Course                 @relation(fields: [courseId], references: [id], onDelete: Cascade)
  submissions AssignmentSubmission[]

  @@index([courseId])
}

model AssignmentSubmission {
  id            String           @id @default(uuid())
  assignmentId  String
  assignment    Assignment       @relation(fields: [assignmentId], references: [id], onDelete: Cascade)
  studentId     String
  student       User             @relation("StudentSubmissions", fields: [studentId], references: [id], onDelete: Cascade)
  attachmentUrl String
  status        SubmissionStatus @default(PENDING)
  feedback      String? // Teacher suggestions/comments

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([assignmentId])
  @@index([studentId])
}

enum AssignmentStatus {
  ACTIVE
  REVIEW
  STOPPED
}

enum SubmissionStatus {
  PENDING
  APPROVED
  REJECTED
}
